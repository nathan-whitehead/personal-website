---
interface Props {
  size?: string;
  class?: string;
  variant: string;
  origin: string;
}
const { size = "1em", class: className = "", variant, origin } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  style={{ width: "auto", height: size }}
  viewBox="0 -960 960 960"
  class={className}
  style="fill: var(--color-ln-danger-1);"
  aria-labelledby="errorTitle errorDesc"
  role="img"
>
  <title id="errorTitle">Error Icon</title>
  <desc id="errorDesc">
    Variant {variant} not supported for {origin}
