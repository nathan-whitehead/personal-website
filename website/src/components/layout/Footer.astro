---
export interface Props {
  year: number;
}

const { year } = Astro.props;

import { Image } from "astro:assets";
import flagSvg from "@images/icons/flags/Flag_of_the_United_States.svg";
---

<footer class="w-full py-2 bg-sf-2 text-center mt-auto">
  <div class="container mx-auto">
    <p>&copy; {year} - Nathan</p>
    <p>
      Built with love in the United States <Image
        src={flagSvg}
        alt="US Flag"
        class="h-[0.8rem] width-auto inline-block"
        loading="eager"
      />
    </p>
    <div>
      <a
        class="hover:text-ln-primary-1 transition-colors"
        href="https://github.com/nathan-whitehead">GitHub</a
      > |
      <a
        class="hover:text-ln-primary-1 transition-colors"
        href="https://linkedin.com/in/nathan-whitehead0">LinkedIn</a
      > |
      <a
        class="hover:text-ln-primary-1 transition-colors"
        href="/about/contact/">Contact</a
      >
    </div>

    <slot />
  </div>
</footer>
