export const Blockquote = (props: { children: any }) => {
  return (
    <blockquote
      class={`
      my-6 pl-6 border-l-4 
      border-icn-primary-1 
      [&>blockquote]:border-icn-primary-2 
      bg-sf-2
      [&>blockquote]:bg-sf-3 
      py-4 px-2 rounded-r
      not-italic
      `}
    >
      {props.children}
