---
import Layout from "@layouts/base.astro";
import Icon from "@components/common/Icon.astro";

// List of all available icons
type IconName =
  | "letterboxd"
  | "hedgehog"
  | "linkedin"
  | "github"
  | "twitter"
  | "instagram"
  | "email"
  | "skyline"
  | "us-flag"
  | "usa-flag"
  | "ok-flag"
  | "oklahoma-flag"
  | "tx-flag"
  | "texas-flag";
const iconNames = [
  "letterboxd",
  "hedgehog",
  "linkedin",
  "github",
  "twitter",
  "instagram",
  "email",
  "skyline",
  "us-flag",
  "ok-flag",
  "tx-flag",
];

// List of available variants (add any others you have)
const variants = {
  letterboxd: [
    "default",
    "light icon mono",
    "light vertical",
    "light horizontal",
    "dark",
    "dark icon mono",
    "dark vertical",
    "dark horizontal",
    "mono",
  ],
  skyline: ["default", "text-title"],
  hedgehog: ["default", "line", "color"],
  linkedin: ["default", "color"],
  github: ["default", "color", "text"],
  twitter: ["default", "color"],
  instagram: ["default", "color", "text"],
  email: ["default"],
  "us-flag": ["default", "small"],
  "ok-flag": ["default", "text"],
  "tx-flag": ["default"],
};

// Different sizes to demonstrate
const sizes = ["1rem", "3rem", "10rem"];
---

<Layout title="Icon Test Page">
  <div class="container">
    <h1>Icon Test Page</h1>
    <p>This page displays all available icons and their variants.</p>

    <section class="icon-grid">
      {
        iconNames.map((iconName) => (
          <div class="icon-card">
            <h2>{iconName}</h2>

            <div class="variant-container">
              {variants[iconName].map((variant) => (
                <div class={`variant ${variant}`}>
                  <h3>Variant: {variant}</h3>
                  <div class="size-container">
                    {sizes.map((size) => (
                      <div class="size-example">
                        <span class="size-label">{size}:</span>
                        <Icon name={iconName} variant={variant} size={size} />
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }
    </section>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    margin-bottom: 1rem;
  }

  .icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .icon-card {
    border: 1px solid var(--color-bd-1);
    border-radius: 8px;
    padding: 1rem;
    background-color: var(--color-bg-1);
  }

  h2 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    text-transform: capitalize;
  }

  h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .variant-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .variant {
    padding: 0.5rem;
    border: 1px dashed #ccc;
    border-radius: 4px;
  }

  .size-container {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .size-example {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .size-label {
    font-family: monospace;
    width: 4em;
  }

  /* .dark {
    color: var(--color-ln-light-1);
    background-color: var(--color-ln-dark-1);
  } */
</style>
