---
import BaseLayout from "@layouts/base.astro";
import lostHedgehogImage from "@images/lost-hedgehog.png";
import { Image } from "astro:assets";
---

<BaseLayout title="Page Not Found">
  <div class="max-w-2xl mx-auto px-4 py-8 text-center">
    <Image
      src={lostHedgehogImage}
      alt="A lost hedgehog looking confused"
      class="mx-auto mb-6 w-xs sm:w-sm h-auto rounded"
    />
    <h1 class="text-4xl font-bold mb-4">Page Not Found</h1>
    <p class="text-xl mb-6">
      Oops! It seems like the page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-primary-500 text-white rounded hover:bg-primary-600 transition-colors"
    >
      Go Back Home
    </a>
  </div>
</BaseLayout>
